<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".PlayerDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/oe_primary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/oe_primary"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tarjeta para información del jugador -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/oe_primary_light"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Jugador"
                        android:textColor="@color/oe_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Campo de Nombre -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/oe_primary"
                        app:boxStrokeWidth="1.5dp"
                        app:hintTextColor="@color/oe_primary"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/oe_primary"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        android:hint="Nombre">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/first_name_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/oe_text_dark"
                            android:textColorHint="@color/oe_primary_muted"
                            android:minHeight="52dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de Apellido -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/oe_primary"
                        app:boxStrokeWidth="1.5dp"
                        app:hintTextColor="@color/oe_primary"
                        app:startIconDrawable="@drawable/ic_person_outline"
                        app:startIconTint="@color/oe_primary"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        android:hint="Apellido">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/last_name_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/oe_text_dark"
                            android:textColorHint="@color/oe_primary_muted"
                            android:minHeight="52dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de Fecha de Nacimiento -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/oe_primary"
                        app:boxStrokeWidth="1.5dp"
                        app:hintTextColor="@color/oe_primary"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/oe_primary"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calendar_today"
                        app:endIconTint="@color/oe_primary"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        android:hint="Fecha de Nacimiento">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/birth_date_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/oe_text_dark"
                            android:textColorHint="@color/oe_primary_muted"
                            android:minHeight="52dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:focusable="false"
                            android:clickable="true"
                            android:cursorVisible="false" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta para foto del jugador -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/oe_primary_light"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto del Jugador"
                        android:textColor="@color/oe_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium" />

                    <ImageView
                        android:id="@+id/player_photo"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginBottom="16dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/photo_placeholder_background"
                        android:contentDescription="Foto del jugador"
                        app:srcCompat="@drawable/ic_add_photo_alternate" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/upload_player_photo_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Subir Foto"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_cloud_upload"
                        app:iconTint="@color/white"
                        app:iconPadding="8dp"
                        app:cornerRadius="24dp"
                        app:backgroundTint="@color/oe_primary"
                        app:rippleColor="@color/oe_primary_dark" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Acciones del organizador (solo visible para organizadores) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/organizer_actions_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/oe_primary_light"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Acciones del Organizador"
                        android:textColor="@color/oe_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reject_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:minHeight="52dp"
                            android:text="Rechazar"
                            android:textAllCaps="false"
                            android:textColor="@color/oe_error"
                            app:strokeColor="@color/oe_error"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_cancel"
                            app:iconTint="@color/oe_error" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/approve_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:minHeight="52dp"
                            android:text="Aprobar"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/oe_success"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_check_circle"
                            app:iconTint="@color/white"
                            app:rippleColor="@color/oe_success_dark" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Guardar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:text="Guardar Cambios"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="@color/oe_primary"
                app:cornerRadius="28dp"
                app:rippleColor="@color/oe_primary_dark"
                app:icon="@drawable/ic_save"
                app:iconTint="@color/white"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>