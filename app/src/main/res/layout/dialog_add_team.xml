<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título del diálogo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo Equipo"
        android:textColor="@color/oe_text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Campo de Nombre del Equipo -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/oe_primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/oe_primary"
        app:startIconDrawable="@drawable/ic_teams"
        app:startIconTint="@color/oe_primary"
        app:endIconMode="clear_text"
        app:endIconTint="@color/oe_primary"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        android:hint="Nombre del equipo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/team_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/oe_text_dark"
            android:textColorHint="@color/oe_primary_muted"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:imeOptions="actionNext"
            tools:text="Los Halcones" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Selector de Categoría -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/oe_primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/oe_primary"
        app:startIconDrawable="@drawable/ic_category"
        app:startIconTint="@color/oe_primary"
        app:endIconMode="dropdown_menu"
        app:endIconTint="@color/oe_primary"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        android:hint="Categoría">

        <AutoCompleteTextView
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/oe_text_dark"
            android:textColorHint="@color/oe_primary_muted"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:clickable="true"
            android:cursorVisible="false"
            tools:text="Sub-15" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo de Descripción (opcional) -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/oe_primary"
        app:boxStrokeWidth="1.5dp"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="@color/oe_primary"
        app:startIconDrawable="@drawable/ic_description"
        app:startIconTint="@color/oe_primary"
        app:endIconMode="clear_text"
        app:endIconTint="@color/oe_primary"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        android:hint="Descripción (opcional)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/team_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/oe_text_dark"
            android:textColorHint="@color/oe_primary_muted"
            android:minHeight="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:maxLines="3"
            android:imeOptions="actionDone"
            tools:text="Equipo de fútbol juvenil" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Selector de Color del Equipo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color del equipo"
        android:textColor="@color/oe_text_dark"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium" />

    <LinearLayout
        android:id="@+id/color_selector_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Colores predefinidos para equipos -->
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_selector_background"
            android:backgroundTint="@color/oe_primary"
            android:layout_margin="4dp"
            android:tag="color_primary"
            android:contentDescription="Color verde" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_selector_background"
            android:backgroundTint="#2196F3"
            android:layout_margin="4dp"
            android:tag="color_blue"
            android:contentDescription="Color azul" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_selector_background"
            android:backgroundTint="#FF5722"
            android:layout_margin="4dp"
            android:tag="color_orange"
            android:contentDescription="Color naranja" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_selector_background"
            android:backgroundTint="#9C27B0"
            android:layout_margin="4dp"
            android:tag="color_purple"
            android:contentDescription="Color morado" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/color_selector_background"
            android:backgroundTint="#F44336"
            android:layout_margin="4dp"
            android:tag="color_red"
            android:contentDescription="Color rojo" />

    </LinearLayout>

    <!-- Mensaje de error (dinámico) -->
    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/oe_error"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:paddingStart="4dp" />

</LinearLayout>