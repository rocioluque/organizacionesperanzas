<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/oe_primary_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true">

        <!-- Logo del equipo -->
        <ImageView
            android:id="@+id/team_logo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/team_logo_background"
            android:contentDescription="Logo del equipo"
            app:srcCompat="@drawable/ic_teams"
            app:tint="@color/white" />

        <!-- Información del equipo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Equipo"
                android:textColor="@color/oe_text_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/team_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textColor="@color/oe_primary_muted"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/team_players_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 jugadores"
                    android:textColor="@color/oe_primary_muted"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@color/oe_primary_muted"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.5" />

                <TextView
                    android:id="@+id/team_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:textSize="12sp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/status_active_background"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>

        <!-- Indicador de selección/navegación -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="Seleccionar equipo"
            app:srcCompat="@drawable/ic_chevron_right"
            app:tint="@color/oe_primary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>